<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <stroke
                android:dashGap="2dp"
                android:dashWidth="2dp"
                android:width="1dp"
                android:color="#D3D3D3" />
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>