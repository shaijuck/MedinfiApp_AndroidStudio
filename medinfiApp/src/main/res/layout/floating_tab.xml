<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
     <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:background="@drawable/drop_shadow" >
    </View>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100" 
            android:background="#EB1C59" 
    >

     <RelativeLayout
        android:id="@+id/calLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
         android:orientation="vertical">

         <ImageButton
             android:id="@+id/btn_call_hospital"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:background="@drawable/tab_call"
             android:visibility="visible" 
             android:layout_marginLeft="10dp"/>

        </RelativeLayout>
    <LinearLayout
        android:id="@+id/favRateLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50">

        <TextView
            android:id="@+id/favrate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_save"
            android:gravity="center"
            android:padding="5dip"
            android:text="@string/favrate"
            android:textColor="@color/white"
            android:textSize="10sp" 
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/line_three"
            android:orientation="vertical" 
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            />

        <TextView
            android:id="@+id/rate_the_doctor_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_rate"
            android:gravity="center"
            android:padding="5dip"
            android:text="@string/rate"
            android:textColor="@color/white"
            android:textSize="10sp" 
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/line_three"
            android:orientation="vertical" 
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/share_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_share"
            android:gravity="center"
            android:padding="5dip"
            android:text="@string/share"
            android:textColor="@color/white"
            android:textSize="10sp" 
             android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</LinearLayout>
</LinearLayout>